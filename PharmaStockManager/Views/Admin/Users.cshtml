@model Dictionary<Microsoft.AspNetCore.Identity.IdentityUser, IList<string>>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Roles</th> <!-- Kullanıcı rollerini görüntülemek için yeni sütun -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Key.Email</td>
                <td>@user.Key.UserName</td>
                <td>
                    <!-- Kullanıcı rollerini burada listele -->
                    @foreach (var role in user.Value)
                    {
                        <span class="badge bg-secondary">@role</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Key.Id">Edit</a>
                    <form asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Key.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateUser">Create New User</a>
</div>

<!-- Validation Errors -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
