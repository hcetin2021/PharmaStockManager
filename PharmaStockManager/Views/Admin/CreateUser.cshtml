@{
    ViewData["Title"] = "Create User";
}

<h2>Create User</h2>

<form asp-controller="Admin" asp-action="CreateUser" method="post">
    <div class="form-group">
        <label for="email" class="control-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="roles" class="control-label">Assign Roles</label>
        <select id="roles" name="roles" class="form-control" multiple>
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role">@role</option>
            }
        </select>
        <small class="form-text text-muted">Hold Ctrl (Cmd on Mac) to select multiple roles.</small>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<!-- Validation Errors -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
