@model PharmaStockManager.ViewModels.ManageRolesViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>Manage Roles for @Model.UserId</h2>

<h3>Current Roles</h3>
<ul>
    @foreach (var role in Model.UserRoles)
    {
        <li>
            @role
            <form method="post" asp-controller="AdminPanel" asp-action="RemoveRole" asp-route-userId="@Model.UserId" asp-route-roleName="@role" style="display:inline;">
                <button type="submit" class="btn btn-danger">Remove</button>
            </form>
        </li>
    }
</ul>

<h3>Assign New Role</h3>
<form method="post" asp-controller="AdminPanel" asp-action="UpdateRoles" asp-route-userId="@Model.UserId">
    <select name="roleName" class="form-control">
        @foreach (var role in Model.AllRoles)
        {
            <option value="@role.Name">@role.Name</option>
        }
    </select>
    <button type="submit" class="btn btn-success mt-2">Add Role</button>
</form>
