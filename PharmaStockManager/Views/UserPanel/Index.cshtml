@model dynamic

@{
    ViewData["Title"] = "User Panel";
}

<h2>Welcome to the User Panel</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Available Drugs</h3>
        <ul class="list-group">
            @foreach (var drug in Model.Drugs)
            {
                <li class="list-group-item">
                    <strong>@drug.Name</strong> - Quantity: @drug.Quantity, Category: @drug.Category
                </li>
            }
        </ul>
    </div>

    <div class="col-md-6">
        <h3>Available Categories</h3>
        <ul class="list-group">
            @foreach (var category in Model.Categories)
            {
                <li class="list-group-item">
                    @category.Name
                </li>
            }
        </ul>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="UserPanel" asp-action="ViewDrugs">View All Drugs</a>
    <a class="btn btn-secondary" asp-controller="UserPanel" asp-action="ViewCategories">View All Categories</a>
</div>
