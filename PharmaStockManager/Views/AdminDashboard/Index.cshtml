@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Drugs</h5>
                <p class="card-text">@Model.TotalDrugs</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Critical Stock Drugs</h5>
                <ul class="list-group">
                    @foreach (var drug in Model.CriticalStockDrugs)
                    {
                        <li class="list-group-item">
                            @drug.Name - Stock: @drug.Quantity
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Categories</h5>
                <p class="card-text">@Model.TotalCategories</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text">@Model.TotalUsers</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Recent Drugs</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var drug in Model.RecentDrugs)
                {
                    <tr>
                        <td>@drug.Name</td>
                        <td>@drug.Category</td>
                        <td>@drug.Quantity</td>
                        <td>@drug.UnitPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h3>Stock Levels</h3>
        <canvas id="stockChart"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var criticalStockDrugNames = @Html.Raw(Json.Serialize(ViewBag.CriticalStockDrugNames));
        var criticalStockDrugQuantities = @Html.Raw(Json.Serialize(ViewBag.CriticalStockDrugQuantities));

        var ctx = document.getElementById('stockChart').getContext('2d');
        var stockChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: criticalStockDrugNames,
                datasets: [{
                    label: 'Stock Levels',
                    data: criticalStockDrugQuantities,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
